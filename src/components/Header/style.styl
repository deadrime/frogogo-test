@import '../../variables'

.header
  padding: 1.4rem 0;
  background: #f8fafc

.headerInner
  max-width: 1200px
  padding: 0 .5rem
  box-sizing: border-box
  margin: 0 auto

.topNav
  display flex
  margin-bottom: 1.5rem;

.mainNavWrapper
  display flex
  justify-content: space-between
  align-items: center;

.account
  margin-left auto
  direction: block

@media (max-width: 1024px)
  .logo
    width 44px
    overflow hidden

@media (max-width: 800px)
  .navItemsWrapper
    order 1
    width 3.5rem