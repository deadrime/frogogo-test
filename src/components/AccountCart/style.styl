@import '../../variables';

.accountCart
  display: flex;
  cursor: pointer;
  text-decoration: none;
  padding-top: .5rem;

  &:hover
    .cartText
      color: $color-primary;

.cart
  display: block;
  position: relative;

.cartText
  transition: color .3s;
  padding-top: .15rem;
  padding-left: 1rem;
  color: $color-dark-grey;

.cartBadge
  padding: .085rem .3rem;
  font-size: 600;
  position: absolute;
  background-color: $color-red;
  color: #fff;
  font-size: .75rem;
  font-weight: 600;
  text-align: center;
  border-radius: .6rem;
  top: 0;
  right: 0;
  transform: translate(50%, -.7em);