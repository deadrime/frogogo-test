@import '../../variables'

.itemQuantity
  align-self flex-start
  display flex
  align-items center
  border 1px solid #C6CDD7
  border-radius 3px
  box-sizing border-box

.itemQuantityValue
  font-weight: bold
  color: #046D9D
  font-size 1rem
  padding .5rem

.itemControl
  font-weight: bold
  font-family: Helvetica
  color: #046D9D
  font-size 1rem
  background: none
  border none
  padding: .5rem 1rem
  height 100%
  cursor pointer
  transition: color .3s
  span
    display block
    transform: translateY(-1px)
  &:hover
    color $color-primary