@import '../../variables'

.itemQuantity
  align-self flex-start
  display flex
  align-items center
  border 1px solid #C6CDD7
  border-radius 3px
  padding: .5rem 1.3rem

.itemQuantityValue
  font-weight: bold
  color: #046D9D
  font-size 1rem
  padding 0 1.275rem

.itemControl

  font-weight: bold
  font-family: Helvetica
  color: #046D9D
  font-size 1rem
  background: none
  border none
  padding 0
  cursor pointer
  transition: color .3s
  &:hover
    color $color-primary